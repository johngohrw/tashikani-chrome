{
  "manifest_version": 3,
  "name": "Hello Extensions of the World",
  "description": "Base Level Extension",
  "version": "0.0.1",
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "assets/hello_extensions.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "scripts/youtube.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/toInject.js"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ]
}